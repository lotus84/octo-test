  style.
    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      display: inline-block;
      margin-bottom: 10px;
      margin-left: 7px;
      transition: color 0.3s ease;
    }

    .components-backwards:hover {
      color: #03a9f4;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .container > section {
      padding: 20px 0;
    }

    .container h2 {
      margin: 0;
      margin-bottom: 20px;
      font-weight: 400;
      font-size: 48px;
      line-height: 60px;
    }

    .container code {
      display: block;
      margin: 10px 0;
      padding: 10px;
      background-color: #BBE1B2;
    }

