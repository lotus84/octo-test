mixin pagination(cssClass)
  .pagination(role="navigation", aria-label="Список страниц")&attributes(attributes)
    ul.pagination__list
      li.pagination__item
        a.pagination__link.active 1
      li.pagination__item
        a.pagination__link(href="#") 2
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item
        a.pagination__link(href="#") 4
      li.pagination__item
        a.pagination__link(href="#") 5
      li.pagination__item
        a.pagination__link(href="#") ...
      li.pagination__item
        a.pagination__link(href="#") 12
