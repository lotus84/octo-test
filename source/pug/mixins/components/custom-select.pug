mixin custom-select(props = {})
  .custom-input.custom-input--select.js-input(class= props.mod ? `custom-input--${props.mod}` : null)&attributes(attributes)
    svg.custom-input__dropdown-icon(width=8, height=6, aria-hidden="true")
      use.custom-input__dropdown-icon-base(xlink:href="#arrow-down")
      use.custom-input__dropdown-icon-alt(xlink:href="#arrow-down-alt")
    label
      input(type="text", name=props.name, value= props.value ? props.value : null, placeholder!=props.label, readonly)
      span!=props.label
    ul.custom-input__select-list
      each item in props.options
        li.custom-input__select-item(tabindex="0")!=item

//- argTypes
  props: {
    for: string,
    id: string,
    mod: oneOf['small', 'small-alt']
    label: string,
    name: string,
    value: string, (optional)
    options: array
  }
