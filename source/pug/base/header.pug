mixin header(headerMod, currentPage)
  header(class=(headerMod) ? "header header--" + headerMod : "header")
    .header__wrapper
      a.header__link(href="#")
        +icon("icon-back", 20, 10)
      .header__search-form
        form
          .header__search-input
            label
              input(type="text", name="header-search", placeholder="Введите номер или наименование запчасти")
              span.input-search__icon
                +icon("icon-search", 16, 16)
              span.visually-hidden Поиск
      .header__nav
        button.header__nav-btn(type="button")
          span.header__avatar
            +img("content", "user-pic", "jpg", 32, 32, "ООО «Автолидер»")
          span.header__user-name ООО «Автолидер»
          span.header__nav-icon
            +icon("arrow-bottom", 8, 4)
        ul.header__nav-list
          li.header__nav-item
            a.header__nav-link(href="#") Сменить пользователя
          li.header__nav-item
            a.header__nav-link(href="#") Выход
      a.header__link(href="#")
        +icon("icon-menu", 25, 24)
